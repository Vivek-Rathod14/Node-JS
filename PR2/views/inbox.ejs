<!DOCTYPE html>
<html>

<head>
  <title>Inbox</title>
</head>
<style>
  body {
    font-family: Arial, sans-serif;
    background: linear-gradient(135deg, #667eea, #764ba2);
    min-height: 100vh;
    padding: 40px;
  }

  .container {
    max-width: 600px;
    margin: auto;
  }

  h1 {
    text-align: center;
    color: #fff;
    margin-bottom: 20px;
  }

  form {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
  }

  input,
  textarea {
    width: 100%;
    padding: 12px;
    margin-bottom: 12px;
    border-radius: 8px;
    border: 1px solid #ccc;
    font-size: 14px;
  }

  button {
    padding: 10px 16px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: bold;
  }

  .add-btn {
    background: #667eea;
    color: #fff;
    width: 100%;
  }

  .todo-list {
    margin-top: 25px;
  }

  .todo-card {
    background: #fff;
    padding: 15px;
    border-radius: 10px;
    margin-bottom: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .todo-card h3 {
    margin: 0;
    color: #333;
  }

  .todo-card p {
    color: #666;
    margin: 6px 0 12px;
  }

  .actions {
    display: flex;
    gap: 10px;
  }

  .edit {
    background: #facc15;
    color: #000;
  }

  .delete {
    background: #ef4444;
    color: #fff;
  }
</style>

<body style="font-family:Arial; background:#333; padding:40px;">

  <h1>Inbox</h1>


  <div class="container">
    <h1>My To-Do List</h1>

    <form action="/add" method="POST">
      <input type="text" name="title" placeholder="Task title" required>
      <textarea name="description" placeholder="Description"></textarea>
      <button class="add-btn" type="submit">Add Task</button>
    </form>

    <div class="todo-list">
      <% todos.forEach(todo=> { %>
        <div class="todo-card">
          <h3>
            <%= todo.title %>
          </h3>
          <p>
            <%= todo.description %>
          </p>

          <div class="actions">
            <a href="/edit/<%= todo.id %>">
              <button class="edit">Edit</button>
            </a>

            <a href="/delete/<%= todo.id %>">
              <button class="delete">Delete</button>
            </a>
          </div>
        </div>
        <% }) %>
    </div>
  </div>


</body>

</html>